{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "..",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": [ "DOM", "DOM.Iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "src/*": [ "./src/*" ],
      "scripts/*": [ "./scripts/*" ],
      "blablo": ["./scripts/blablo.ts"],
      "package.json": ["./package.json"]
    },
    "target": "ES2022",
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../.configs",
    "../dist",
    "../docs",
    "../coverage",
    "../.devops"
  ]
}
